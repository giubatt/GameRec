{
  "name": "svelte-app",
  "version": "1.0.0",
  "scripts": {
    "watch:tailwind": "postcss public/tailwind.css -o public/build/index.css -w",
    "build:tailwind": "cross-env NODE_ENV=production postcss public/tailwind.css -o public/build/index.css",
    "build": "yarn run build:tailwind && rollup -c",
    "start": "sirv public",
    "serve": "serve public -p 80",
    "dev": "concurrently \"rollup -c -w\" \"yarn run watch:tailwind\""
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^16.0.0",
    "@rollup/plugin-node-resolve": "^10.0.0",
    "autoprefixer": "^9",
    "concurrently": "^5.3.0",
    "postcss": "^7",
    "postcss-cli": "^8.3.0",
    "rollup": "^2.3.4",
    "rollup-plugin-css-only": "^3.0.0",
    "rollup-plugin-livereload": "^2.0.0",
    "rollup-plugin-svelte": "^7.0.0",
    "rollup-plugin-terser": "^7.0.0",
    "sass": "^1.30.0",
    "svelte": "^3.0.0",
    "svelte-preprocess": "^4.6.1",
    "tailwindcss": "npm:@tailwindcss/postcss7-compat"
  },
  "dependencies": {
    "sirv-cli": "^1.0.0"
  }
}
